{
  "name": "Response capture",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "Capture the ticket info from alitrip",

 "icons": {
    "128": "icon.png"
  },
  "options_page": "options.html",
  "page_action": {
    "default_icon": "icon.png",
    "default_title" : "alitrip i'm coming for you",
    "default_popup": "popup.html"
  },
  "permissions": [
    "cookies",
    "storage",
    "webRequest",
    "https://sijipiao.alitrip.com/*",
    "http://*/*",
    "tabs"
  ],


  "background": {
    "scripts": ["background.js","lib/jquery-1.8.2.min.js"],
    "persistent": true
  }
}